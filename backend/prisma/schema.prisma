// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider {
  LOCAL
  GOOGLE
  FACEBOOK
  GITHUB
  TWITTER
}

enum CaslAction {
  CREATE
  READ
  UPDATE
  DELETE
  MANAGE
}

enum CaslSubject {
  Category
  User
}

model user {
  id Int @default(autoincrement()) @id
  firstName String
  lastName String
  email String? @unique
  picture String?
  password String?
  provider Provider @default(LOCAL)
  providerId String?
  roles role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model role {
  id Int @default(autoincrement()) @id
  name String
  users user[]
  permissions permission[]
}

model permission {
  id Int @default(autoincrement()) @id
  subject CaslSubject
  action CaslAction
  condition Json?

  roleId Int
  role role @relation(fields: [roleId], references: [id])
}

model category {
  id Int @default(autoincrement()) @id
  name String
  slug String @unique
  picture String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}